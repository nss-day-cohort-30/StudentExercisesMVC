@model StudentExercisesMVC.Models.ViewModels.StudentEditViewModel

<h1>Edit @Model.Student.FirstName @Model.Student.LastName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Student.FirstName" class="control-label"></label>
                <input asp-for="Student.FirstName" class="form-control" />
                <span asp-validation-for="Student.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.LastName" class="control-label"></label>
                <input asp-for="Student.LastName" class="form-control" />
                <span asp-validation-for="Student.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.SlackHandle" class="control-label"></label>
                <input asp-for="Student.SlackHandle" class="form-control" />
                <span asp-validation-for="Student.SlackHandle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cohorts" class="control-label"></label>
                <select class="form-control" asp-for="Student.CohortId" asp-items="@Model.Cohorts"></select>
            </div>
            <div class="form-group">
                <label asp-for="Exercises" class="control-label"></label>
                <select class="form-control" 
                        multiple 
                        asp-for="SelectedExercises" 
                        asp-items="@Model.Exercises">
                </select>
                <span asp-validation-for="Exercises" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
